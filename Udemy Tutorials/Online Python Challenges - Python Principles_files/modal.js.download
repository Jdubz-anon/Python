
var saved = document.onkeydown;

function hide_modal () {
	$(".modal-wrapper").remove();
	document.onkeydown = saved;
}

function show_modal (content_id) {
	hide_modal();

	var content = document.getElementById(content_id).innerHTML;

	var html = "";
	html += "<div class='modal-wrapper' onclick='hide_modal();'>";
	html += '<div class="outer-container"><div class="inner-container">';
	html += "  <div class='modal-container'>";
	html += '    <div class="close-modal" onclick="hide_modal();"><i class="fa fa-times"></i></div>';
	html += content;
	html += "  </div>";
	html += "</div></div>";
	html += "</div>";

	$("body").append(html);

	$(".modal-container").each(function (i, elem) {
		elem.onclick = function (e) {
			e.stopPropagation();
		};

	});

	saved = document.onkeydown;
	document.onkeydown = function(evt) {
		evt = evt || window.event;
		if (evt.keyCode == 27) {
			hide_modal();
		}
	};
}

